# Prevents installing platform-specific binaries
optional=false
# Use the platform-agnostic SWC binary
swc_platform=linuxmusl-x64
# Force npm to use the correct platform
platform=linux
# Don't download optional dependencies
optional=false
# Don't download devDependencies in production
production=true
# Use npm's legacy peer deps to handle peer dependency issues
legacy-peer-deps=true
